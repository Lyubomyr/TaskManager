<!DOCTYPE html>
<html>
<head>
  <title>TaskManager</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
      <header>
        <nav class="round">
          <ul>
            <li><%= link_to "Home", '/' %></li>
            <li><%= link_to "Users", 'users' %></li>
            <li><%= link_to "Tasks", '#' %></li>
          </ul>
        </nav>
      </header>
      <section class="round">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </section>
    </div>
</body>
</html>
